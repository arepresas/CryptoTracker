<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1646229495829-1"
               author="arepresas">
        <createTable tableName="crypto_coin">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_crypto_coin"/>
            </column>
            <column name="symbol"
                    type="VARCHAR(255)"/>
            <column name="name"
                    type="VARCHAR(255)"/>
            <column name="category"
                    type="VARCHAR(255)"/>
            <column name="description"
                    type="VARCHAR(1024)"/>
            <column name="slug"
                    type="VARCHAR(255)"/>
            <column name="logo"
                    type="VARCHAR(255)"/>
            <column name="subreddit"
                    type="VARCHAR(255)"/>
            <column name="tags"
                    type="VARCHAR(1024)"/>
            <column name="tag_names"
                    type="VARCHAR(1024)"/>
            <column name="tag_groups"
                    type="VARCHAR(1024)"/>
            <column name="token_address"
                    type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1646229495829-2"
               author="arepresas">
        <createTable tableName="crypto_coin_price">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_crypto_coin_price"/>
            </column>
            <column name="cmc_rank"
                    type="BIGINT"/>
            <column name="num_market_pairs"
                    type="BIGINT"/>
            <column name="circulating_supply"
                    type="DOUBLE"/>
            <column name="total_supply"
                    type="DOUBLE"/>
            <column name="max_supply"
                    type="DOUBLE"/>
            <column name="last_updated"
                    type="DATETIME"/>
            <column name="date_added"
                    type="DATETIME"/>
            <column name="platform_id"
                    type="BIGINT"/>
            <column name="coin_info_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1646229495829-3"
               author="arepresas">
        <createTable tableName="crypto_coin_quote">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_crypto_coin_quote"/>
            </column>
            <column name="currency"
                    type="INT"/>
            <column name="price"
                    type="DOUBLE"/>
            <column name="volume_24h"
                    type="DOUBLE"/>
            <column name="volume_change_24h"
                    type="DOUBLE"/>
            <column name="percent_change_1h"
                    type="DOUBLE"/>
            <column name="percent_change_24h"
                    type="DOUBLE"/>
            <column name="percent_change_7d"
                    type="DOUBLE"/>
            <column name="percent_change_30d"
                    type="DOUBLE"/>
            <column name="percent_change_60d"
                    type="DOUBLE"/>
            <column name="percent_change_90d"
                    type="DOUBLE"/>
            <column name="market_cap"
                    type="DOUBLE"/>
            <column name="market_cap_dominance"
                    type="DOUBLE"/>
            <column name="fully_diluted_market_cap"
                    type="DOUBLE"/>
            <column name="last_updated"
                    type="DATETIME"/>
            <column name="coin_price_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1646229495829-4"
               author="arepresas">
        <addForeignKeyConstraint baseColumnNames="coin_info_id"
                                 baseTableName="crypto_coin_price"
                                 constraintName="FK_CRYPTO_COIN_PRICE_ON_COIN_INFO"
                                 referencedColumnNames="id"
                                 referencedTableName="crypto_coin"/>
    </changeSet>
    <changeSet id="1646229495829-5"
               author="arepresas">
        <addForeignKeyConstraint baseColumnNames="coin_price_id"
                                 baseTableName="crypto_coin_quote"
                                 constraintName="FK_CRYPTO_COIN_QUOTE_ON_COIN_PRICE"
                                 referencedColumnNames="id"
                                 referencedTableName="crypto_coin_price"/>
    </changeSet>

</databaseChangeLog>